<div class='zg_header'>
  <nav class='navbar navbar-default'>
    <div class='container-fluid'>
      <div class='navbar-header'>
        <%= link_to "ЗнайГород  #{Settings.app.name}", Settings.app.main_page, class: 'navbar-brand' %>
      </div>

      <div class="collapse navbar-collapse">
        <ul class="nav navbar-nav">
          <li class='dropdown'>
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Сайты<span class="caret"></span></a>
            <ul class='dropdown-menu'>
              <% ZgHeader::Engine.sites.each do |slug, site| %>
                <li><%= link_to site['title'].html_safe, site['link'] %></li>
              <% end %>
            </ul>
          </li>
        </ul>

        <ul class="nav navbar-nav navbar-right">
          <% unless user_signed_in? %>
            <li><%= link_to 'Войти', Settings.profile.sign_in_url %></li>
            <li><%= link_to 'Регистрация', Settings.profile.sign_up_url %></li>
          <% else %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= current_user.redis_info['name'] %><span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><%= link_to 'Настройки', Settings.profile.edit %></li>
                <li><%= link_to 'Выйти', Settings.profile.sign_out_url, method: :delete %></li>
              </ul>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</div>
